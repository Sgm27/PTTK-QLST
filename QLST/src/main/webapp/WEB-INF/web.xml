<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>QLST</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.qlst.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.qlst.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerStatisticsServlet</servlet-name>
        <servlet-class>com.qlst.servlet.CustomerStatisticsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerStatisticsServlet</servlet-name>
        <url-pattern>/statistics/customers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionDetailsServlet</servlet-name>
        <servlet-class>com.qlst.servlet.TransactionDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionDetailsServlet</servlet-name>
        <url-pattern>/statistics/transactions</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.qlst.servlet.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/statistics/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
